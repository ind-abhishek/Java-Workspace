{
    // --- 1. UPDATES & TELEMETRY (Internet & Speed Bachao) ---
    "java.server.launchMode": "Hybrid",
    "update.mode": "none",
    "extensions.autoUpdate": false,
    "telemetry.telemetryLevel": "off",
    
    // --- 2. UI PERFORMANCE (RAM Bachao) ---
    "workbench.startupEditor": "none",
    "editor.minimap.enabled": false,
    "editor.smoothScrolling": false,
    "editor.cursorBlinking": "solid",
    "workbench.list.smoothScrolling": false,
    "terminal.integrated.gpuAcceleration": "off",

    // --- 3. JAVA LIGHT MODE (Fast Startup) ---
    "java.import.maven.enabled": false,
    "java.import.gradle.enabled": false,
    
    // [CHANGE 1] AutoBuild ko ON rehne do (Line hata di), 
    // taaki Copilot errors dekh sake aur solution bata sake.
    "java.debug.settings.onBuildFailureProceed": true,

    // [CHANGE 2] Yahan se maine wo lines DELETE kar di hain jo 
    // Copilot aur Chat ko "False/Hidden" kar rahi thin.
    // Ab Copilot Script ke hisaab se chalega (College=ON, Pendrive=OFF).

    // --- 4. UI CLEANUP (Hints Band) ---
    "editor.codeLens": false,
    "editor.breadcrumbs.enabled": false,
    "editor.formatOnType": false,
    "editor.formatOnPaste": false,
    "java.referencesCodeLens.enabled": false,
    "java.implementationsCodeLens.enabled": false,

    // --- 5. MEMORY OPTIMIZATION ---
    "java.jdt.ls.vmargs": "-Xmx512m -XX:+UseSerialGC",
    
    // --- 6. FILE HIDING (Kachra Chupao) ---
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.class": true
    },
    
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.class": true
    }
}